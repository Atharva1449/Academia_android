<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background = "#F3F6FD"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:textSize="1dp" />


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/scrollviewhome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvyearadmitted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:text="Roll_no: " />
            <TextView
                android:id="@+id/tvdegree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:text="Degree of qualification : " />


            <TextView
                android:id="@+id/tvdepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Department : "
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/tvyearofadmission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="Year of admission : " />

            <TextView
                android:id="@+id/tvyear"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Year of engineering : " />

            <TextView
                android:id="@+id/tvdivision"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Division: " />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/scrollviewhomemain"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:textSize="24sp"
                    android:text="Degree Qualification " />

                <RadioGroup
                    android:id="@+id/ais_radiogroupid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fullshape_with_shadow"

                    android:layout_marginTop="20dp"

                    android:padding="15dp"

                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"

                    >

                    <RadioButton
                        android:id="@+id/ais_radio_poly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Polytechnic" />

                    <RadioButton
                        android:id="@+id/ais_radio_zcoer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="ZCOER" />

                    <RadioButton
                        android:id="@+id/ais_radio_mba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="ZIBACAR" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ais_textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"

                    android:textSize="24sp"
                    android:text="Year admitted to" />

                <RadioGroup
                    android:id="@+id/ais_radiogroupid2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fullshape_with_shadow"

                    android:layout_marginTop="20dp"

                    android:padding="15dp"

                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    >

                    <RadioButton
                        android:id="@+id/ais_radio_fe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="First Year" />

                    <RadioButton
                        android:id="@+id/ais_radio_dse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="DSC" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ais_textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Department"
                    android:textSize="24sp" />

                <RadioGroup
                    android:id="@+id/ais_Radio_Grp_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fullshape_with_shadow"

                    android:layout_marginTop="20dp"
                    android:hint="Enter max 2 characters"
                    android:padding="15dp"
                    android:maxLength="2"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"

                   >

                    <RadioButton
                        android:id="@+id/ais_radio_cs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="CS" />

                    <RadioButton
                        android:id="@+id/ais_radio_mech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Mech" />

                    <RadioButton
                        android:id="@+id/ais_radio_it"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="IT" />

                    <RadioButton
                        android:id="@+id/ais_radio_civil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Civil" />

                    <RadioButton
                        android:id="@+id/ais_radio_electrical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Electrical" />

                    <RadioButton
                        android:id="@+id/ais_radio_Etc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Electronics" />
                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ais_textView_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Year of Admission"
                    android:textSize="24sp" />


                <EditText
                    android:id="@+id/ais_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/fullshape_with_shadow"

                    android:layout_marginTop="20dp"
                    android:hint="Enter max 2 characters"
                    android:padding="15dp"
                    android:maxLength="2"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:inputType="number" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Year"
                    android:textSize="24sp" />


                <EditText
                    android:id="@+id/ais_home_semester"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/fullshape_with_shadow"
                    android:layout_marginTop="20dp"
                    android:hint="Enter Engineering Year"
                    android:padding="15dp"
                    android:maxLength="1"

                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:inputType="number" />
            </LinearLayout>>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Division"
                    android:textSize="24sp" />


                <EditText
                    android:id="@+id/ais_home_div"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/fullshape_with_shadow"
                    android:layout_marginTop="20dp"
                    android:hint="Enter Division"
                    android:padding="15dp"
                    android:maxLength="1"

                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:inputType="textPersonName" />
            </LinearLayout>
            <Button
                android:id="@+id/ais_button_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_button"
                android:textColor="#FFFFFF"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="100dp"
                android:text="Save"
                android:layout_marginRight="100dp" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="match_parent"
                android:layout_marginTop="400dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>