<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="1dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"

                    android:textSize="24sp"
                    android:text="Degree Qualification " />

                <RadioGroup
                    android:id="@+id/ais_radiogroupid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fullshape_with_shadow"

                    android:layout_marginTop="20dp"

                    android:padding="15dp"

                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"

                    >

                    <RadioButton
                        android:id="@+id/ais_radio_poly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Polytechnic" />

                    <RadioButton
                        android:id="@+id/ais_radio_zcoer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ZCOER" />

                    <RadioButton
                        android:id="@+id/ais_radio_mba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ZIBACAR" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ais_textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"

                    android:textSize="24sp"
                    android:text="Year admitted to" />

                <RadioGroup
                    android:id="@+id/ais_radiogroupid2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fullshape_with_shadow"

                    android:layout_marginTop="20dp"

                    android:padding="15dp"

                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    >

                    <RadioButton
                        android:id="@+id/ais_radio_fe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Year" />

                    <RadioButton
                        android:id="@+id/ais_radio_dse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DSC" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ais_textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Department"
                    android:textSize="24sp" />

                <RadioGroup
                    android:id="@+id/ais_Radio_Grp_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fullshape_with_shadow"

                    android:layout_marginTop="20dp"
                    android:hint="Enter max 2 characters"
                    android:padding="15dp"
                    android:maxLength="2"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"

                   >

                    <RadioButton
                        android:id="@+id/ais_radio_cs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CS" />

                    <RadioButton
                        android:id="@+id/ais_radio_mech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mech" />

                    <RadioButton
                        android:id="@+id/ais_radio_it"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IT" />

                    <RadioButton
                        android:id="@+id/ais_radio_civil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Civil" />

                    <RadioButton
                        android:id="@+id/ais_radio_electrical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Electrical" />

                    <RadioButton
                        android:id="@+id/ais_radio_Etc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Electronics" />
                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ais_textView_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Year of Admission"
                    android:textSize="24sp" />


                <EditText
                    android:id="@+id/ais_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/fullshape_with_shadow"

                    android:layout_marginTop="20dp"
                    android:hint="Enter max 2 characters"
                    android:padding="15dp"
                    android:maxLength="2"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:inputType="number" />
            </LinearLayout>

            <Button
                android:id="@+id/ais_button_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_button"
                android:textColor="#FFFFFF"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="100dp"
                android:text="Save"
                android:layout_marginRight="100dp" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="match_parent"
                android:layout_marginTop="400dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>