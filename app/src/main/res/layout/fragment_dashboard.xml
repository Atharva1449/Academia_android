<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background = "#F3F6FD"
    tools:context=".ui.dashboard.DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background = "#F3F6FD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ais_textView_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Name"
                    android:textSize="24sp" />


                <EditText
                    android:id="@+id/ais_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/fullshape_with_shadow"

                    android:layout_marginTop="20dp"
                    android:hint="Enter Name"
                    android:padding="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ais_textView_Date_Of_Birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Date of Birth"
                    android:textSize="24sp" />


                <EditText
                    android:id="@+id/ais_Date_of_Birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/fullshape_with_shadow"
                    android:layout_marginTop="20dp"
                    android:hint="Enter DOB"
                    android:padding="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ais_textView_Mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Mobile Number"
                    android:textSize="24sp" />


                <EditText
                    android:id="@+id/ais_Mobileno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/fullshape_with_shadow"
                    android:layout_marginTop="20dp"
                    android:hint="Enter Mobile Number"
                    android:padding="15dp"
                    android:maxLength="10"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ais_textView_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Address"
                    android:textSize="24sp" />


                <EditText
                    android:id="@+id/ais_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/fullshape_with_shadow"
                    android:layout_marginTop="20dp"
                    android:hint="Enter Address"
                    android:padding="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ais_textView_Addharno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:text="Addhar no"
                    android:textSize="24sp" />


                <EditText
                    android:id="@+id/ais_Addharno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/fullshape_with_shadow"
                    android:layout_marginTop="20dp"
                    android:hint="Enter max length 12 "
                    android:padding="15dp"
                    android:maxLength="12"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:inputType="number" />
            </LinearLayout>
            <Button
                android:id="@+id/ais_save_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_button"
                android:textColor="#FFFFFF"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="100dp"
                android:layout_below="@+id/ais_Addharno"
                android:text="Save"
                android:layout_marginRight="100dp" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>
